{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["jest", "node", "aws-lambda"],
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*",
    "src/infra/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
